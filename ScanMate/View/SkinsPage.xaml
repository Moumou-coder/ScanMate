<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanMate.View.SkinsPage"
             xmlns:model="clr-namespace:ScanMate.Model"
             xmlns:viewmodel="clr-namespace:ScanMate.ViewModel"
             x:DataType="viewmodel:SkinsViewModel"
             Title="SkinsPage">
    
    <Grid Padding="10" RowSpacing="10" ColumnDefinitions="*,*" RowDefinitions="Auto,*" BackgroundColor="Transparent">
        <Button Text="Extract Skins from JSON" 
                Grid.Row="0" 
                Grid.Column="0"
                HeightRequest="60"
                WidthRequest="200"
                HorizontalOptions="Start"
                Command="{Binding GetSkinsFromJSONCommand}"/>

        <CollectionView ItemsSource="{Binding mySkinList}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Skins">
                    <Grid Padding="10" ColumnDefinitions="500,*" >
                        <Border HeightRequest="125">
                            <Grid Padding="0" ColumnDefinitions="125,*" BackgroundColor="Grey">
                                <Image
                                Aspect="AspectFill"
                                HeightRequest="100"
                                Source="{Binding Image}"
                                WidthRequest="100" />
                                <VerticalStackLayout    VerticalOptions="Center"
                                                        Grid.Column="1"
                                                        Padding="10">
                                    <Label VerticalOptions="Center" Text="{Binding ChampionName}"/>
                                    <Label VerticalOptions="Center" Text="{Binding Name}"/>
                                    <Label VerticalOptions="Center" Text="{Binding Price}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>