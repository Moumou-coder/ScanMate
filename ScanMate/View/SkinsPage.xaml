<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanMate.View.SkinsPage"
             xmlns:model="clr-namespace:ScanMate.Model"
             xmlns:viewmodel="clr-namespace:ScanMate.ViewModel"
             x:DataType="viewmodel:SkinsViewModel"
             Title="SkinsPage">

    <ScrollView>
        <Grid BackgroundColor="Transparent" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,*">
            <Label Text="bala" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding mySkinList}" Grid.Row="1" Grid.ColumnSpan="4">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Skins">
                        <Grid>
                            <Border>
                                <Grid BackgroundColor="Grey" ColumnDefinitions="*,*,*,*" Padding="4">
                                    <Image  Aspect="AspectFill"
                                            HeightRequest="100"
                                            WidthRequest="100" 
                                            Grid.Column="0"
                                            Source="{Binding Image}"/>
                                    <Label VerticalOptions="Center" Grid.Column="1" Text="{Binding ChampionName}" />
                                    <Label VerticalOptions="Center" Grid.Column="2" Text="{Binding Name}"/>
                                    <Label VerticalOptions="Center" Grid.Column="3" Text="{Binding Price, StringFormat='{0} coins'}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>

</ContentPage>